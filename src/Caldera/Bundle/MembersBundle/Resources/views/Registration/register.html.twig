{% extends 'CalderaMembersBundle:Template:layout.html.twig' %}

{% block content %}
    <div class="container">
        <div class="col-xs-12">
            <form method="post" action="{{ path('fos_user_registration_register') }}" class="fos_user_registration_register">
                {% if form_errors(form.email) %}
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="alert alert-danger">
                                {{ form_errors(form.email) }}
                            </div>
                        </div>
                    </div>
                {% endif %}

                <div class="form-group row">
                    <label for="fos_user_registration_form_email" class="col-xs-4 col-form-label">
                        Deine E-Mail-Adresse
                    </label>

                    <div class="col-xs-8">
                        {{ form_widget(form.email, { attr: { class: 'form-control'} } ) }}
                    </div>
                </div>

                {% if form_errors(form.username) %}
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="alert alert-danger">
                                {{ form_errors(form.username) }}
                            </div>
                        </div>
                    </div>
                {% endif %}

                <div class="form-group row">
                    <label for="username" class="col-xs-4 col-form-label">
                        Dein Benutzername
                    </label>

                    <div class="col-xs-8">
                        {{ form_widget(form.username, { attr: { class: 'form-control'} } ) }}
                    </div>
                </div>

                {% if form_errors(form.plainPassword.first) %}
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="alert alert-danger">
                                {{ form_errors(form.plainPassword.first) }}
                            </div>
                        </div>
                    </div>
                {% endif %}

                <div class="form-group row">
                    <label for="fos_user_registration_form_plainPassword_first" class="col-xs-4 col-form-label">
                        Dein Kennwort
                    </label>

                    <div class="col-xs-8">
                        {{ form_widget(form.plainPassword.first, { attr: { class: 'form-control'} } ) }}
                    </div>
                </div>

                {% if form_errors(form.plainPassword.second) %}
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="alert alert-danger">
                                {{ form_errors(form.plainPassword.second) }}
                            </div>
                        </div>
                    </div>
                {% endif %}

                <div class="form-group row">
                    <label for="fos_user_registration_form_plainPassword_second" class="col-xs-4 col-form-label">
                        Kennwort wiederholen
                    </label>

                    <div class="col-xs-8">
                        {{ form_widget(form.plainPassword.second, { attr: { class: 'form-control'} } ) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-12">
                        <input class="btn btn-primary pull-right" type="submit" value="Registrieren" />
                    </div>
                </div>

                {{ form_widget(form._token) }}
            </form>
        </div>
    </div>
{% endblock %}