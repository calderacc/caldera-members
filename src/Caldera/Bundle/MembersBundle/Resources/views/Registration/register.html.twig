{% extends 'CalderaMembersBundle:Template:layout.html.twig' %}

{% block content %}
    <div class="container">
        <div class="col-xs-12">
            <form method="post" action="{{ path('fos_user_registration_register') }}" class="fos_user_registration_register">
                <div class="form-group row">
                    <label for="fos_user_registration_form_email" class="col-xs-4 col-form-label">
                        Deine E-Mail-Adresse
                    </label>

                    <div class="col-xs-8">
                        <input class="form-control" type="email" id="fos_user_registration_form_email" name="fos_user_registration_form[email]" required="required" />
                    </div>
                </div>

                <div class="form-group row">
                    <label for="username" class="col-xs-4 col-form-label">
                        Dein Benutzername
                    </label>

                    <div class="col-xs-8">
                        <input class="form-control" type="text" id="username" name="_username" required="required" />
                    </div>
                </div>

                <div class="form-group row">
                    <label for="fos_user_registration_form_plainPassword_first" class="col-xs-4 col-form-label">
                        Dein Kennwort
                    </label>

                    <div class="col-xs-8">
                        <input class="form-control" type="password" id="fos_user_registration_form_plainPassword_first" name="fos_user_registration_form[plainPassword][first]" required="required" />
                    </div>
                </div>

                <div class="form-group row">
                    <label for="fos_user_registration_form_plainPassword_second" class="col-xs-4 col-form-label">
                        Kennwort wiederholen
                    </label>

                    <div class="col-xs-8">
                        <input class="form-control" type="password" id="fos_user_registration_form_plainPassword_second" name="fos_user_registration_form[plainPassword][second]" required="required" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-12">
                        <input class="btn btn-primary pull-right" type="submit" value="Registrieren" />
                    </div>
                </div>

                {{ form_widget(form._token) }}
            </form>
        </div>
    </div>
{% endblock %}